@page
@model RazorStocks.Pages.Stocks.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Stock</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock.Symbol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.Symbol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.Industry)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock.CurrentPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.CurrentPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock.TotalValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.TotalValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock.TotalGain)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.TotalGain)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock.AverageCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.AverageCost)
        </dd>
          <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock.Holdings)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>NoOfShares</th>
                    <th>Cost</th>
                    <th>PurchaseDate</th>

                </tr>
                @foreach (var item in Model.Stock.Holdings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfShares)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PurchaseDate)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Stock.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
