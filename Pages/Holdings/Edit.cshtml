@page
@model RazorStocks.Pages.Holdings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Holding</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Holding.ID" />
            <div class="form-group">
                <label asp-for="Holding.StockID" class="control-label"></label>
                <select asp-for="Holding.StockID" class="form-control" asp-items="ViewBag.StockID"></select>
                <span asp-validation-for="Holding.StockID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Holding.Cost" class="control-label"></label>
                <input asp-for="Holding.Cost" class="form-control" />
                <span asp-validation-for="Holding.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Holding.NoOfShares" class="control-label"></label>
                <input asp-for="Holding.NoOfShares" class="form-control" />
                <span asp-validation-for="Holding.NoOfShares" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Holding.PurchaseDate" class="control-label"></label>
                <input asp-for="Holding.PurchaseDate" class="form-control" />
                <span asp-validation-for="Holding.PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
